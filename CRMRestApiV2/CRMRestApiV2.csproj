<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Swashbuckle.AspNetCore" Version="6.4.0" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\CRMRepository\CRMRepository.csproj" />
  </ItemGroup>
  <PropertyGroup>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <RunPostBuildEvent>Always</RunPostBuildEvent>
  </PropertyGroup>
  <Target Name="PostBuild" AfterTargets="PostBuildEvent">
    <Exec Command=" &lt;Target Name=&quot;openapi&quot; AfterTargets=&quot;Build&quot;&gt;&#xD;&#xA;    &lt;Message Text=&quot;generating openapi&quot; Importance=&quot;high&quot; /&gt;&#xD;&#xA;    &lt;Exec EnvironmentVariables=&quot;DOTNET_ENVIRONMENT=SwaggerBuild&quot; Command=&quot;dotnet tool run swagger tofile --yaml --output openapi.yaml $(OutputPath)$(AssemblyName).dll service&quot; /&gt;&#xD;&#xA;  &lt;/Target&gt;" />
  </Target>

</Project>
